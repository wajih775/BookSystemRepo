@model MVC.Models.PasswordResetModel

@{
    ViewBag.Title = "Reset Password | Jobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section head{
   
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery("#resetFrm").formValidation({
                // Indicate the framework
                // Can be bootstrap, foundation, pure, semantic, uikit
                framework: 'bootstrap',
                // Other settings
                icon: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },

                fields: {
                    Email: { validators: { notEmpty: {}, emailAddress: {} } },
                    NewPassword: {
                        validators: {
                            notEmpty: {}, stringLength: {
                                min: 6,
                                message: 'The password must be equal or more than 6 characters'
                            }
                        }
                    },
                    ConfirmPassword: { validators: { notEmpty: {}, identical: { field: 'NewPassword', message: 'The password and its confirm must be the same' } } }
                    

                }
            });
        });
    </script>
}

<header class="page-header">
    <h1 class="page-title">Reset Password</h1>
</header>


<div id="primary" class="">
    <div id="content" class="container" role="main">
        <article  class="page hentry">
            <div class="entry-content">
               
                @if (Request.QueryString["sent"] != null)
                {
                    <div class="job-manager-form">
                    <div class="field account-sign-in">
                        @if (Request.QueryString["sent"] == "1")
                        {
                            @("Your password has been reset.")
                            
                        }
                        else
                        {
                                @Html.Raw("<p style='color:red;'>There was an error, please try again later.</p>")
                        }
                        
                    </div>
                    </div>
                }
                else
                {
                    using (Html.BeginForm("PasswordReset", "Account", FormMethod.Post, new { @id = "resetFrm", @name = "resetFrm" }))
                     {
                    @Html.AntiForgeryToken()
                    @Html.TextBoxFor(m=>m.ResetToken,new {@type="hidden"})
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m=>m.Email)
                                @Html.TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                    </div>
                    
                         <div class="row">
                             <div class="col-md-6">
                                 <div class="form-group">
                                     @Html.LabelFor(m=>m.NewPassword)
                                     @Html.PasswordFor(m => m.NewPassword)
                                     @Html.ValidationMessageFor(m => m.NewPassword)
                                 </div>
                             </div>
                         </div>
                    
                         <div class="row">
                             <div class="col-md-6">
                                 <div class="form-group">
                                     @Html.LabelFor(m=>m.ConfirmPassword)
                                     @Html.PasswordFor(m => m.ConfirmPassword)
                                     @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                 </div>
                             </div>
                         </div>
                    
                         
                   
                    
                    <div class="row">
                        <p></p>
                        <div class="col-md-12 login-submit">
                            <input type="submit" name="wp-submit" id="wp-submit" class="button-primary" value="Submit" />
                        </div>
                    </div>
                    
                     }
                }
                
                
                
               

            </div>
        </article>
    </div>
</div>