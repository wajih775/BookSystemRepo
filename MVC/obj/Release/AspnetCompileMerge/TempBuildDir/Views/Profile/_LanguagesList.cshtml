@using DomainModel
@model System.Collections.Generic.IList<DomainModel.Languages>

<table >
    <thead>
        <tr>
            <th>Language</th>
            <th>Level</th>
            <th>Years Of Experience</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5">You currently have no education.</td>
            </tr>
        }

        @foreach (Languages lang in Model)
        {
            <tr>
                <td>@lang.Language</td>
                <td>@lang.Level</td>
                <td>@lang.YearsOfExperience</td>
                <td><a class="btnEdit" href="../Language/Edit?id=@lang.ID">Edit</a></td>
                <td><a class="btnDelete" href="../Language/Delete?id=@lang.ID">Delete</a></td>
            </tr>

        }
    
    </tbody>
</table>