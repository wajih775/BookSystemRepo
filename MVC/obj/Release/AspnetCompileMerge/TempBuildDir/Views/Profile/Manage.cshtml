@model MVC.Models.Profile

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@section head
{
    <script src="~/content/js/manage-account.js"></script>
    
    <script>

        var imgLoading = "<div class='imgLoading'><img src='../../content/images/loading.gif'/></div>";


        //Add Education
        jQuery(document).ready(function() {

            bindGridTools("Education", "/Profile/_EducationList", "education-list");
            bindGridTools("Experience", "/Profile/_ExperienceList", "experience-list");
            bindGridTools("Certifications", "/Profile/_CertificationsList", "certification-list");
            bindGridTools("Skills", "/Profile/_SkillsList", "skill-list");
            bindGridTools("Languages", "/Profile/_LanguagesList", "language-list");
            bindGridTools("References", "/Profile/_ReferencesList", "reference-list");


            function bindGridTools(divID, partialView, gridContainerID) {
                jQuery('#' + divID + ' .btnAdd, #' + divID + '  .btnEdit,#' + divID + '  .btnDelete').magnificPopup({
                    disableOn: 700,
                    type: 'iframe',
                    mainClass: 'mfp-fade',
                    removalDelay: 160,
                    preloader: false,
                    callbacks: {
                        open: function() {window.location.hash="";},
                        close: function() {
                            jQuery.ajax({
                                url: partialView,
                                type: "GET",
                                beforeSend: function() { jQuery('#' + gridContainerID + '').html(imgLoading); },
                                success: function(partialViewResult) {
                                    jQuery('#' + gridContainerID + '').html(partialViewResult);
                                    bindGridTools(divID, partialView, gridContainerID);
                                    window.location.hash = "#" + divID;
                                },
                                error: function() { alert('There was an error loading data.'); }
                            });
                        }
                    },
                    fixedContentPos: true
                }); //End Magnific Popup
            } //End Bind Tools


        }); //End Document Ready

    </script>

}

