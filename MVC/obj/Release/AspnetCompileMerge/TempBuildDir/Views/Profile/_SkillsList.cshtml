@using DomainModel
@model System.Collections.Generic.IList<DomainModel.UserSkill>

<table >
    <thead>
        <tr>
            <th>Skill</th>
            <th>Level</th>
            <th>Years Of Experience</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @if (Model.Count == 0)
        {
            <tr>
                <td colspan="5">You currently have no education.</td>
            </tr>
        }

        @foreach (UserSkill skill in Model)
        {
            <tr>
                <td>@skill.SkillName</td>
                <td>@skill.Level</td>
                <td>@skill.YOE</td>
                <td><a class="btnEdit" href="../Skill/Edit?id=@skill.ID">Edit</a></td>
                <td><a class="btnDelete" href="../Skill/Delete?id=@skill.ID">Delete</a></td>
            </tr>

        }
    
    </tbody>
</table>