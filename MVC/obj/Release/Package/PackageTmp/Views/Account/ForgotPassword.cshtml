@model MVC.Models.VerificationModel

@{
    ViewBag.Title = "Forgot Password | Jobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section head{
   
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery("#forgotFrm").formValidation({
                // Indicate the framework
                // Can be bootstrap, foundation, pure, semantic, uikit
                framework: 'bootstrap',
                // Other settings
                icon: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },

                fields: {
                    Email: {validators: {notEmpty: {},emailAddress: {}}}
                }
            });
        });
    </script>
}

<header class="page-header">
    <h1 class="page-title">Forgot Password</h1>
</header>


<div id="primary" class="">
    <div id="content" class="container" role="main">
        <article  class="page hentry">
            <div class="entry-content">
               
                @if (Request.QueryString["sent"] != null)
                {
                    <div class="job-manager-form">
                    <div class="field account-sign-in">
                        We have sent you an instruction on how to reset your password to your email address. Pleae check your email and follow the steps.
                    </div>
                </div>
                }
                else
                {
                     using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "forgotFrm", @name = "forgotFrm" }))
                     {
                    @Html.AntiForgeryToken()
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Please enter your Username / Email </label>
                                @Html.TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                    </div>
                    
                   
                         
                   
                    
                    <div class="row">
                        <p></p>
                        <div class="col-md-12 login-submit">
                            <input type="submit" name="wp-submit" id="wp-submit" class="button-primary" value="Submit" />
                        </div>
                    </div>
                    
                     }
                }
                
                
                
               

            </div>
        </article>
    </div>
</div>