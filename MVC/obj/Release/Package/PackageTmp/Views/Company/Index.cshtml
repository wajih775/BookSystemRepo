                {
                    if (!string.IsNullOrEmpty(Model.Industry))
                {
                    @Model.Industry;
                }
                else
                {
                    @("No information provided")
                   
                }
                }else
                {
                    @("No information provided")
                   
                }</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-m">Type</td>
                                    <td class="text-right"> @if (Model != null)
                {
                if (!string.IsNullOrEmpty(Model.Type))
                {
                    @Model.Type;
                }
                else
                {
                    @("No information provided")
                   
                }
                }else
                {
                    @("No information provided")
                   
                }</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-m">Headquarters</td>
                                    <td class="text-right"> @if (Model != null)
                {
                if (!string.IsNullOrEmpty(Model.Headquarters))
                {
                    @Model.Headquarters;
                }
                else
                {
                    @("No information provided")
                   
                }
                }else
                {
                    @("No information provided")
                   
                }</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-m">Company Size</td>
                                    <td class="text-right"> @if (Model != null)
                {
                if (!string.IsNullOrEmpty(Model.CompanySize))
                {
                    @Model.CompanySize;
                }
                else
                {
                    @("No information provided")
                   
                }
                }else
                {
                    @("No information provided")
                   
                }</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-m">Founded</td>
                                    <td class="text-right"> @if (Model != null)
                {
                @Model.Founded.Value.Year;
                
                }else
                {
                    @("No information provided")
                   
                }</td>
                                </tr>
                            </tbody></table>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </section>
    

</div>


    