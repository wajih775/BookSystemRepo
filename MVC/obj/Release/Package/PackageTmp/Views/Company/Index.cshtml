        <!-- start container -->
        <div class="container">
            <!-- start row -->
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-lg-7">
                   
                    <h3 class="title">Specialties</h3>
                    <p>
                        @if (Model != null)
                {
                if (!string.IsNullOrEmpty(Model.Specialities))
                {
                   @Html.Raw(@Model.Specialities)
                }
                else
                {
                    @("No information provided")
                   
                }
                }else
                {
                    @("No information provided")
                   
                }
                    </p>
                </div>
                <div class="col-xs-12 col-sm-12 col-lg-5">
                    <div class="block-grey">
                        <table>
                            <tbody><tr>
                                       <td class="font-weight-m">Website</td>
                                       <td class="text-right">  @if (Model != null)
                {
                if (!string.IsNullOrEmpty(Model.Website))
                {
                    @Model.Website;
                }
                else
                {
                    @("No information provided")
                   
                }
                }else
                {
                    @("No information provided")
                   
                }</td>
                                   </tr>
                                <tr>
                                    <td class="font-weight-m">Industry</td>
