@model DomainModel.Education

@{
    ViewBag.Title = "Education";
    Layout = "~/Views/Shared/_MinLayout.cshtml";
}

@section head{

    
    <script type="text/javascript">
        jQuery(function() {
            jQuery('.datepicker').datepicker({ format: "dd-mm-yyyy" }); //Initialise any date pickers
        });
    </script>

   
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery("#frmEducation").formValidation({
                // Indicate the framework
                // Can be bootstrap, foundation, pure, semantic, uikit
                framework: 'bootstrap',
                // Other settings
                icon: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },

                fields: {
                    Institute: { validators: { notEmpty: {} } },
                    Degree: { validators: { notEmpty: {} } },
                    Country: { validators: { notEmpty: {} } },
                    City: { validators: { notEmpty: {} } },
                    GPA: { validators: { notEmpty: {} } },
                    CompletionDate: { validators: { notEmpty: {}, date: { format: 'DD-MM-YYYY', message: 'Invalid Date Format' } } }

                }
            });
        });
    </script>
}


<h2 class="modal-title">Education</h2>


 @if (!@Html.ViewData.ModelState.IsValid)
                {
                    <div class="job-manager-error">@Html.ValidationSummary(true)</div>

                }



                @using (Html.BeginForm("Index", "Education", FormMethod.Post, new { id = "frmEducation" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Institute)
                            @Html.TextBoxFor(m => m.Institute, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Institute)
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Degree)
                             @Html.DropDownListFor(m => m.Degree, ViewData["Degrees"] as SelectList)
                            @Html.ValidationMessageFor(m => m.Degree)
                        </div>
                    </div>
                    
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Country)
                            @Html.DropDownListFor(m => m.Country, ViewData["Countries"] as SelectList)
                            @Html.ValidationMessageFor(m => m.Country)
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.City)
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.City)
                        </div>
                    </div>
                    
                      <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Major)
                            @Html.TextBoxFor(m => m.Major, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Major)
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.GPA)
                            @Html.TextBoxFor(m => m.GPA, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.GPA)
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CompletionDate)
                            @Html.TextBoxFor(m => m.CompletionDate, new { @class = "form-control datepicker" })
                            @Html.ValidationMessageFor(m => m.CompletionDate)
                        </div>
                    </div>
                    
                     
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description,4,4, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description)
                        </div>
                    </div>
                    
                    <p class="submit">
                        <input type="submit" name="wp-submit" id="wp-submit" class="button-primary" value="Add" />
                    </p>
                }